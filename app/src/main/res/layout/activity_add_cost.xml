<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6CACF"
    android:orientation="vertical"
    tools:context=".AddCost">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4361ee"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iconBackAddCost"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:tint="@color/white"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Add Cost Detail"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iconSaveCostRick"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center|end"
            app:civ_border_width="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/action_done_tick"
            app:tint="@color/white" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/costType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/palanquin_dark"

                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Date"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/DateAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Paper Width"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/PaperWidthNameAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Paper Length"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/paperLengthAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:inputType="number"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Gram"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/gramAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Rate"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/RateAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Paper Total"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/priceOfPaperAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="none"
                android:focusable="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="One Piece"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/onePieceAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="none"
                android:focusable="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Rate For Price Per Piece"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/RatePricePerPieceAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Price Per Piece"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/pricePerPieceAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="none"
                android:focusable="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Value For Silicate"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/silicateValueEnterAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Silicate"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/silicateAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="none"
                android:focusable="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Printing"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/PrintingAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Width For Lamination"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/LiminationWidthAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Length For Lamination"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/LaminationLengthAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Rate For Lamination"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/LaminationRateAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Lamination Total"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/LaminationTotalAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="none"
                android:focusable="false"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Pin"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/PinValueAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Labour"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/LabourValueTotalAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:textColor="@color/black"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/palanquin_dark"
                android:text="Net Value"
                android:textColor="#352F2F"
                android:textSize="22sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/NetValueAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:inputType="none"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:padding="7dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_text_style"/>
                <NumberPicker
                    android:id="@+id/numberPickerCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-65dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>







        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>