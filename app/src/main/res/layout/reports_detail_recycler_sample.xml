<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ReportsDetails">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C6CACF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Name:"
                    android:textColor="#352F2F"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/reportDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Name:"
                    android:textColor="#352F2F"
                    android:background="#B8B0B0"
                    android:textSize="13sp"
                    android:padding="9dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#C6CACF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Product Name:"
                    android:textColor="#352F2F"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/reportDetailProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="product:"
                    android:textColor="#352F2F"
                    android:background="#B8B0B0"
                    android:textSize="13sp"
                    android:padding="9dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#C6CACF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Quantity:"
                    android:textColor="#352F2F"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/reportDetailQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Quantity:"
                    android:textColor="#352F2F"
                    android:background="#B8B0B0"
                    android:textSize="13sp"
                    android:padding="9dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#C6CACF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Amount:"
                    android:textColor="#352F2F"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/reportDetailPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="amount:"
                    android:textColor="#352F2F"
                    android:background="#B8B0B0"
                    android:textSize="13sp"
                    android:padding="9dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#C6CACF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Payment Status:"
                    android:textColor="#352F2F"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/reportDetailPaymentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="amount:"
                    android:textColor="#352F2F"
                    android:background="#B8B0B0"
                    android:textSize="13sp"
                    android:padding="9dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#C6CACF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="Remaining:"
                    android:textColor="#352F2F"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/reportDetailRemainingPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark"
                    android:text="amount:"
                    android:textColor="#352F2F"
                    android:background="#B8B0B0"
                    android:textSize="13sp"
                    android:padding="9dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>







        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>